#!/usr/bin/env bash

echo "Starting server PRESS CTRL-C to exit"

/usr/games/steamcmd +login anonymous +force_install_dir {{ install_dir }} +app_update {{ steam_game_id }} +quit

# NOTE: Minimum password length is 5 characters & Password cant be in the server name.
# NOTE: You need to make sure the ports 2456-2458 is being forwarded to your server through your local router & firewall.
{% for server in servers %}
./valheim_server.x86_64 -name "{{ server.name }}" -port {{ server.port - 1 }} -nographics -world "{{ server.name }}" -password "{{ server.password }}" > /dev/null &
{% endfor %}

while :
do
TIMESTAMP=$(date '+%Y-%m-%d %H:%M:%S')
echo "valheim.service: timestamp ${TIMESTAMP}"
sleep 60
done
